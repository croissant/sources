<% @rows.each do |row| %>
<div class="verify-form">
  <div><%=row['detail']%><span class="result" id="result<%=row['id']%>" /></div>
  <div class="phrase" id="phrase<%=row['id']%>" style="display:none;">
    <%=row['phrase']%>
  </div>
  <div><textarea id="ans<%=row['id']%>" cols="32" rows="4"></textarea></div>
  <div id="button<%=row.id%>">
    <input type="button" value="verify" onclick="javascript:verify(<%= row['id'] %>);" />
  </div>
</div>
<% end %>
