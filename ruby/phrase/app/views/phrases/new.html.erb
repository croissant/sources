<h1>New phrase</h1>

<% form_for(@phrase) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :phrase %><br />
    <%= f.text_area :phrase, :cols => 32, :rows => 4 %>
  </p>
  <p>
    <%= f.label :detail %><br />
    <%= f.text_area :detail, :cols => 32, :rows => 16 %>
  </p>
  <p>
    <%= f.select :type_id, Type.find(:all).collect {|t| [t.name, t.id] } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', phrases_path %>
