<h1>Editing phrase</h1>

<% form_for(@phrase) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :phrase %><br />
    <%= f.text_area :phrase, :cols => 32, :rows => 4 %>
  </p>
  <p>
    <%= f.label :detail %><br />
    <%= f.text_area :detail, :cols => 32, :rows => 8 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @phrase %> |
<%= link_to 'Back', phrases_path %>
